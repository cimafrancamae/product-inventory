<!-- Content section with fixed header -->
<div class="container fixed bg-blue-500 left-0 top-0 text-white py-2 px-4 z-10">
  <div class="flex items-center justify-between">
    <h1 class="text-lg font-semibold">Products</h1>
    <%= link_to "Add New Product", new_product_path, class: "bg-white text-blue-500 py-2 px-4 rounded hover:bg-blue-700 hover:text-white" %>
  </div>
</div>

<!-- Main content section -->
<div class="container mx-auto mt-16">
  <% @products.each do |product| %>
    <div class="my-4 p-4 border border-gray-300 rounded-lg flex items-center justify-between">
      <div class="flex items-center">
        <% if product.image.attached? %>
          <%= image_tag product.image.variant(:thumb), class: "w-16 h-16 object-cover rounded-full mr-4" %>
        <% else %>
          <div class="w-16 h-16 bg-gray-300 rounded-full flex items-center justify-center mr-4">
            Image Not Available
          </div>
        <% end %>

        <div>
          <%= link_to product.name, product, class: "text-md font-semibold text-blue-500 hover:underline block" %>
          <p class="text-gray-700 text-sm"><strong>Quantity:</strong> <%= product.qty %></p>
        </div>
      </div>

      <div>
        <div class="mt-2">
          <%= link_to "Edit", edit_product_path(product), class: "text-blue-500 hover:underline mr-2 text-sm" %> |
          <%= link_to "Delete", product, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this product?" }, class: "text-red-500 hover:underline text-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
