<div class="container mx-auto mt-8">
  <header class="fixed top-0 left-0 right-0 bg-blue-500 text-white py-4 px-4 z-10">
    <div class="container flex items-center justify-between mx-auto">
      <h1 class="text-3xl font-semibold">Edit Product</h1>
      <div class="flex items-center">
        <%= link_to "Back", products_path, class: "hover:underline ml-4" %>
        <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700 ml-4" %>
      </div>
    </div>
  </header>

  <div class="px-4">
    <%= render partial: "form", locals: { product: @product } %>
  </div>
</div>
