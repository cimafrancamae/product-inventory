  <div class="container top-0 left-0 right-0 bg-slate-900 text-white py-3 px-3 z-10 flex justify-between items-center">
    <%= link_to "Back", products_path, class: "hover:underline text-sm" %>
    <div class="flex items-center">
      <%= link_to "Edit", edit_product_path(@product), class: "bg-white text-blue-500 py-1 px-2 rounded hover:bg-blue-700 hover:text-white mr-2 text-sm" %>
      <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "bg-red-500 text-white px-2 py-1 rounded hover:bg-red-700 text-sm" %>
    </div>
  </div>

<div class="container mx-auto py-4 px-4">

  <h1 class="text-2xl font-semibold text-slate-900 mb-2"><%= @product.name %></h1>

  <div class="flex items-center mt-16">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "object-cover rounded-full mr-2 h-full w-full max-w-xs" %>
    <% else %>
      <div class="w-20 h-20 bg-gray-300 rounded-full flex items-center justify-center mr-2">
        Image Not Available
      </div>
    <% end %>

    <div>
      <p class="text-gray-700 mb-2 text-sm"><strong>Price:</strong> $<%= @product.price %></p>
      <p class="text-gray-700 mb-2 text-sm"><strong>Quantity:</strong> <%= @product.qty %></p>
      <p class="text-gray-600 mb-2 text-sm"><strong>Description:</strong> <%= @product.content %></p>
    </div>
  </div>
</div>
