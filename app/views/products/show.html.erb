<div class="container mx-auto">
  <div class="container fixed top-0 left-0 right-0 bg-blue-500 text-white py-4 px-4 z-10 flex justify-between items-center">
    <%= link_to "Back", products_path, class: "hover:underline" %>
    <div class="flex items-center">
      <%= link_to "Edit", edit_product_path(@product), class: "bg-white text-blue-500 py-2 px-4 rounded hover:bg-blue-700 hover:text-white mr-4" %>
      <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700" %>
    </div>
  </div>

  <h1 class="text-3xl font-semibold text-blue-500 mb-2"><%= @product.name %></h1>

  <div class="flex items-center mt-28">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "object-cover rounded-full mr-4 h-full w-full max-w-xs" %>
    <% else %>
      <div class="w-32 h-32 bg-gray-300 rounded-full flex items-center justify-center mr-4">
        Image Not Available
      </div>
    <% end %>

    <div>
      <p class="text-gray-700 mb-2"><strong>Price:</strong> $<%= @product.price %></p>
      <p class="text-gray-700 mb-2"><strong>Quantity:</strong> <%= @product.qty %></p>
      <p class="text-gray-600 mb-2"><strong>Description:</strong> <%= @product.content %></p>
    </div>
  </div>
</div>
