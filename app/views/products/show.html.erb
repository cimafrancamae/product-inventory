<div class="container mx-auto py-4 px-4">
  <div class="flex mt-16 p-4 gap-8">
    <!-- Left Column for Image -->
    <div class="bg-gray-300 h-64 flex items-center justify-center overflow-hidden flex-grow">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "object-cover mr-2 h-full w-full max-w-xs" %> 
      <% else %>
        <div class="rounded-full flex items-center justify-center mr-2">
          Image Not Available
        </div>
      <% end %>
    </div>

    <!-- Right Column for Product Details -->
    <div class="flex-1 px-4 flex-grow">
        <h1 class="text-4xl font-semibold mb-2"><%= @product.name.capitalize %></h1>
        <p class="text-gray-700 mb-2 text-sm">$<%= @product.price %></p>
        <div class="mb-2">
            <label for="quantity" class="text-gray-700 text-sm"><strong>Quantity:</strong></label>
            <input type="number" id="quantity" name="quantity" value="1" class="w-16 px-2 py-1 text-gray-700 border rounded-md">
        </div>
        <div class="flex p-4">
            <button class="bg-slate-900 text-white px-4 py-2 rounded-md mr-4">Add to Cart</button>
            <button class="bg-slate-900 text-white px-4 py-2 rounded-md">Buy Now</button>
        </div>
        <p class="text-gray-600 mb-2 text-sm"><strong>Description:</strong> <%= @product.content %></p>
    </div>

  </div>
</div>
